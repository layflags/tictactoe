{
  "name": "tictactoe",
  "version": "0.1.0",
  "description": "The TicTacToe game in a few lines of vanilla ES6",
  "main": "src/index.js",
  "scripts": {
    "predev": "npm run -s build",
    "dev": "NODE_ENV=development rollup -c --watch",
    "lint": "standard",
    "test": "ava",
    "build": "rm -rf build && mkdir build && cp public/* build/ && rollup -c",
    "deploy": "npm run build && surge build tictactoe.layfla.gs"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/layflags/tictactoe.git"
  },
  "keywords": [
    "tic",
    "tac",
    "toe",
    "game"
  ],
  "author": "Lay Flags",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/layflags/tictactoe/issues"
  },
  "homepage": "https://github.com/layflags/tictactoe#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "cssnano": "^3.7.7",
    "live-server": "^1.1.0",
    "postcss-cssnext": "^2.8.0",
    "pre-commit": "^1.1.1",
    "rollup": "^0.36.3",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-postcss-export": "^0.1.2",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^2.5.0",
    "standard": "^5.3.1",
    "surge": "^0.15.0"
  },
  "dependencies": {
    "core-js": "^2.4.1"
  }
}
